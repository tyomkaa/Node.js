	<%- include('../../fragments/header.ejs') %>

		<main>
			<h2><%= __('mattress.list.pageTitle') %></h2>


			<div class="card">
				<img class="card-img" src="../../images/mattress.jpg" alt="mattress">
				<% for (let mattress of mattresses) { %>
				<div class="price"><%= __('mattress.fields.Name') %></div>
				<div class="card-title"><%= mattress.Name %></div>

				<div class="card-description">
					<div class="price"><%= __('mattress.fields.Type') %></div>
					<br><%= mattress.Type %><br>
					<br>
					<div class="price"><%= __('mattress.fields.Size') %></div>
					<br><%= mattress.Size %><br>
					<br>
					<div class="price"><%= __('mattress.fields.Description') %></div>
					<br><%= mattress.Description %><br>
					<br>
				</div>
				
				<div class="price"><%= __('mattress.fields.Price') %></div>
				<div class="price"><%= mattress.Price %></div>
				<br>
				<ul class="list-actions">
					<li>
						<a href="/mattress/details/<%=mattress.id%>" class="list-actions-button-details"><%= __('list.actions.details') %></a>
					</li>
					<%if(loggedUser && loggedUser.Name == "admin"){%>
					<li>
						<a href="/mattress/edit/<%=mattress.id%>" class="list-actions-button-edit"><%= __('list.actions.edit') %></a>
					</li>
					<li>
						<a href="/mattress/delete/<%=mattress.id%>" class="list-actions-button-delete"><%= __('list.actions.delete') %></a>
					</li>
					<% } %>
				</ul>
				<% } %>
			</div>
	
			<%if(loggedUser && loggedUser.Name == "admin"){%>
<p><a href="/mattress/add" class="button-add"><%= __('mattress.list.addNew') %></a></p>
<% } %>

</main>

