	<%- include('../../fragments/header.ejs') %>

	<main>
		<h2>Orders' form</h2>

		<form class="form">

			<label for="Client">Client: <span class="symbol-required">*</span></label>
			<select name="Client" id="Client" class="error-input" required>
				<option label="--Choose client--"></option>
				<option value="1">Bartosz Szymanczak</option>
			</select>
			<span id="errorClient" class="errors-text">Field is required</span>


			<label for="Mattress">Mattress: <span class="symbol-required">*</span></label>
			<select name="Mattress" id="Mattress" class="error-input" required>
				<option label="--Choose mattress--"></option>
				<option value="1">ALOE VERA LATEX MATTRESS</option>
			</select>
			<span id="errorMattress" class="errors-text">Field is required</span>


			<label for="Amount">Amount: <span class="symbol-required">*</span></label>
			<input type="text" name="Amount" id="Amount" class="error-input" required/>
			<span id="errorAmount" class="errors-text">Field is required</span>


			<label for="Status">Status: <span class="symbol-required">*</span></label>
			<input type="text" name="Status" id="Status" class="error-input" required/>
			<span id="errorStatus" class="errors-text">Field is required</span>

			
			<label for="ShippingCosts">Shipping costs: <span class="symbol-required">*</span></label>
			<input type="text" name="Shipping costs" id="ShippingCosts" class="error-input" required/>
			<span id="errorShippingCosts" class="errors-text">Field is required</span>

			
			<label for="DepartureDate">Departure date: <span class="symbol-required">*</span></label>
			<input type="text" name="Departure date" id="DepartureDate" class="error-input" required/>
			<span id="errorDepartureDate" class="errors-text">Field is required</span>


			<label for="OrderDate">Order date: <span class="symbol-required">*</span></label>
			<input type="text" name="Order date" id="OrderDate" class="error-input" required/>
			<span id="errorOrderDate" class="errors-text">Field is required</span>


			<div class="form-buttons">
				<p id="errorsSummary" class="errors-text">There are mistakes in form</p>
				<input type="submit" value="Add" class="form-button-submit" />
				<a href="order.html" class="form-button-cancel">Cancel</a>
			</div>
		</form>

		
	</main>

